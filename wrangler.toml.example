name = "minipwd-worker"
main = "src/index.ts"
compatibility_date = "2024-01-01"
workers_dev = true

# D1 数据库绑定
# 注意：需要在 Cloudflare 创建自己的 D1 数据库，并填入对应的 database_id
[[d1_databases]]
binding = "DB"
database_name = "minipwd-db"
# database_id = "your-database-id-here"  # 替换为你的实际数据库 ID

# 静态资源绑定
[assets]
directory = "src/assets"
binding = "ASSETS"

# 环境变量
[vars]
SESSION_DURATION = "1800"

# Secrets (通过 wrangler secret put 设置):
# - MASTER_PASSWORD: 登录主密码（可随时修改，不影响已有数据）
# - ENCRYPTION_KEY: 数据加密密钥（生成后固定，不可修改）
# - JWT_SECRET: JWT token 签名密钥
