{
  "name": "minipwd-worker",
  "version": "1.0.0",
  "description": "Personal password manager on Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create minipwd-db",
    "db:setup": "wrangler d1 execute minipwd-db --local --file=./schema.sql",
    "db:setup:prod": "wrangler d1 execute minipwd-db --file=./schema.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.18.0"
  }
}
